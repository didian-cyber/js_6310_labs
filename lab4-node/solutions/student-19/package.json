{
  "name": "beauty-booker-bot",
  "version": "1.0.0",
  "description": "Telegram bot for beauty salon appointments and management",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "telegram",
    "bot",
    "beauty-salon",
    "booking",
    "javascript",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "node-telegram-bot-api": "^0.66.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "jest": "^30.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "bail": 1,
    "verbose": false,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/*.test.js"
    ]
  }
}